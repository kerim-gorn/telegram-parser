# ===== Application =====
APP_ENV=development
LOG_LEVEL=INFO
API_PORT=8000

# ===== Telegram API (Telethon) =====
TELEGRAM_API_ID=000000
TELEGRAM_API_HASH=your_api_hash_here
# Optional: Identify the account when storing StringSession in Redis
TELEGRAM_ACCOUNT_ID=default
TELEGRAM_SESSION_PREFIX=telegram:sessions:

# ===== Postgres =====
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=telegram_parser
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ===== RabbitMQ =====
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest
CELERY_BROKER_URL=amqp://${RABBITMQ_DEFAULT_USER}:${RABBITMQ_DEFAULT_PASS}@${RABBITMQ_HOST}:${RABBITMQ_PORT}// 

# ===== Redis (sessions + Celery result backend) =====
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}
CELERY_RESULT_BACKEND=${REDIS_URL}


# ===== Encryption (Fernet) =====
# Generate with: python -c 'from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())'
SESSION_CRYPTO_KEY=
TELEGRAM_PHONE=
TELEGRAM_2FA_PASSWORD=

# ===== Demo / testing =====
TEST_PUBLIC_CHAT=@durov
TEST_HISTORY_DAYS=40

# ===== Celery Beat =====
SCHEDULED_CHATS=@durov
SCHEDULED_ACCOUNTS=
SCHEDULED_HISTORY_DAYS=

# ===== Realtime =====
REALTIME_EXCHANGE=realtime_fanout

# ===== OpenRouter =====
OPENROUTER_API_KEY=
LLM_MODEL_NAME=
OPENROUTER_PROXY_URL=

# ===== Notifications =====
SIGNALS_CHANNEL=
SIGNALS_ACCOUNT_ID=